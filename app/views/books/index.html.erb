<p id="notice"></p>

<div class="container px-5 px-sm-0">
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
  </div>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>

      <%= image_tag current_user.get_profile_image("100x100") %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tbody>
      </table>

       <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-sm btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label>Title</label><br>
          <%= f.text_field :title %>
        </div>

        <div class="form-group">
          <label>Opinion</label><br>
          <%= f.text_area :body %>
        </div>

         <div class="form-group">
         <%= f.submit "Create Book", :class=>"btn btn-success" %>
         </div>
        <% end %>

    </div>


    <div class="col-md-8 offset-md-1">
      <p id="notice"></p>
      <h2>Books</h2>
         <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image("40x40") %>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>